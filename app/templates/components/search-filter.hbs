<button
  class="search"
  aria-label="search"
  {{action 'onFocusIn'}}
>
  <i class="fas fa-search"></i>
</button>
<Input
  placeholder="Monster or Species"
  class="input"
  @value={{@searchTerm}}
  {{action "onKeyUp" on="keyUp"}}
  {{action "onFocusIn" on="focusIn"}}
  {{action "onFocusOut" on="focusOut"}}
/>
<button
  class="{{this.closeBtnClassName}}"
  aria-label="clear search"
  {{action 'clearSearch'}}
>
  <i class="fas fa-times"></i>
</button>
