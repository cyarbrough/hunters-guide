<h2 class="title">{{monster.name}}</h2>
<h3 class="subtitle">{{monster.species.name}}</h3>
<div class="monster-grid">
  {{monster-logo slug=monster.slug alternate=showAlternate toggle=(action 'toggleGrid')}}
  {{status-grid physiology=monster.physiology}}
</div>
{{monster-logo slug=monster.slug alternate=true isHidden=true}}
{{weakness-grid weaknesses=monster.weaknesses breakpoints=monster.breakpoints}}
<div class="ailment-row">
  {{#each monster.ailments as |ailment|}}
    {{ailment-info ailment=ailment}}
  {{/each}}
</div>

<hr class="break">